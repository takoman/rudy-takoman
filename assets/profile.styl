body
	height 3000px
.profile-cover
	width 100%
	height 490px
	background-image url(/assets/img/bg/cover_01.jpg)
	background-size cover
	background-position center
	background-repeat no-repeat

	.mask
		&.dark
			background #000
		  left 0
		  top 0
		  bottom 0
		  right 0
		  z-index 2
		  width 100%
		  height 100%
		  opacity 0.25
.navbar
	background-color transparent
	background transparent
	border none
	a
		color #ffffff
	.navbar-search
		display block
		float right
		background #333
		height 74px
		width 78px
		margin-left 20px
		color #ffffff
		text-align center
		font-size 33px
		line-height 76px
.navbar-default
	.navbar-nav > li > a
		color #ffffff
		letter-spacing 0.12em
	.navbar-brand
		color #ffffff
		font-size 32px
		padding-right 115px
	.navbar-text
		color #ffffff
		font-size 12px
		a 
			margin-left 8px
			margin-right 8px
			letter-spacing 0.2em
