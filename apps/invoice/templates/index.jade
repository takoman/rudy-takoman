extends ../../../components/main_layout/templates/index

append locals
  - assetPackage = 'invoice'

append head
  title Takoman Order

block body
  .container
    .col-sm-6
      .panel.invoice-summary
        .merchant-summary
          .merchant-logo
            img
          .merchant-source-countries 美國
          .merchant-name 美國好物代購
          .merchant-actions
            a.btn.btn-small.btn-secondary 聯絡賣家
        .invoice-summary
          .invoice-summary-item
            .invoice-summary-item-label 訂單編號
            .invoice-summary-item-content
              .invoice-summary-item-value
                = invoice.get('invoice_no')
          .invoice-summary-item
            .invoice-summary-item-label 定擔保留期限
            .invoice-summary-item-content
              .invoice-summary-item-value
                = invoice.get('due_at')
          .invoice-summary-item
            .invoice-summary-item-label 附註
            .invoice-summary-item-content
              p
                | 特價貨品的折扣有期限，
                | 請於指定日期內結賬匯款。
                | 若超過繳費期限，請通知您的賣家
                | 另外建立一張訂單。
    .col-sm-18
      .table-responsive
        table.table.table-dotted.invoice-items-table
          thead
            tr
              th.image 商品
              th
              th 單價
              th 數量
              th 小計
          tbody
            each item in invoiceLineItems.models
              tr( data-invoice-line-item-id=item.get('_id') )
                td.invoice-line-item-image
                td.invoice-line-item-details
                td.invoice-line-item-price
                  = item.get('price')
                td.invoice-line-item-quantity
                  = item.get('quantity')
                td.invoice-line-item-subtotal
                  = item.get('price') * item.get('quantity')
