@import '../../../components/main_layout/stylesheets/variables'

body.invoice
  .invoice-checkout-banner
    margin-bottom 80px

  .invoice-line-item-price
  .invoice-line-item-quantity
  .invoice-line-item-subtotal
    width 120px
  .invoice-line-item-subtotal
    text-align right

  .invoice-total-summary
    margin-bottom 20px
    .invoice-total-breakdown
      border-bottom 2px dotted $black
      padding-bottom $table-condensed-cell-padding
      margin-bottom $table-condensed-cell-padding
    .invoice-total-breakdown-item
    .invoice-total
      padding $table-cell-padding
      padding-top $table-condensed-cell-padding
      padding-bottom $table-condensed-cell-padding
    .invoice-total
      font-size 18px

  .invoice-summary-panel
    border 1px solid $black
    padding 20px
    margin-right 20px
  .merchant-summary
    text-align center
    line-height 1.5
    border-bottom 1px solid $black
    padding-bottom 20px
    margin-bottom 20px
  .merchant-logo
    text-align center
    position relative
    top -55px
    margin-bottom -55px
    > img
      background-color $white
      width 70px
      height 70px
      padding 10px
  .merchant-name
    font-size 18px
    margin-bottom 10px

  .invoice-summary
    font-size 12px
    p
      line-height 2
  .invoice-summary-item
    &:not(:last-child):after
      content: '-'
  .invoice-summary-item-value
    font-size 18px
    color $red
