extends ../../../components/main_layout/templates/index
include ../../../components/search/mixin
include ../../../components/bordered_dropdown/mixin

append locals
  - assetPackage = 'auth'
  - bodyClass = 'auth'

block head
  title Log in to Takoman

block body
  .container.is-constrained
    #auth-message.alert.alert-info
      if user
        | Logged in as #{user.get('email')}
      else
        | Not logged in

    .brand
      include ../../../components/main_layout/public/svgs/takoman.svg

    .tab-content
      include ../../../components/auth/templates/login
      include ../../../components/auth/templates/signup
