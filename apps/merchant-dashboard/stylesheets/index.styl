@import "../../../components/main_layout/stylesheets/variables"
.profile
  padding 40px 0
  background-image linear-gradient(to right, $gray-dark 0%, $gray-dark 50%, rgba(255, 255, 255, 0) 51%, rgba(255, 255, 255, 0) 100%)
  background-position bottom
  background-size 4px 2px
  background-repeat repeat-x
  .profile-cover
    width 100%
    height 312px
    position relative
    background-image url(/assets/img/bg/cover_01.jpg)
    background-size cover
    background-position center
    background-repeat no-repeat
    .profile-cover-desc
      left 50%
      top 50%
      text-align center
      position absolute
      transform translate(-50%, -50%)
      color $white
      font-size 14px
      letter-spacing 2px
      line-height 24px
  .profile-info
    background-color: #f6f6f6
    .profile-info-avatar
      float right
      width 80px
      height 80px
      background-color: $gray-lighter
      margin-top 20px
      img
        width 80px
        height 80px
    .profile-info-main
      padding-top 25px
      .profile-info-h1
        margin-bottom 8px
        font-size 20px
      .profile-info-hearts
        svg
          width 20px
          height 20px
          .fillable
            fill $red
    .profile-info-contact
      height 120px
      background-color $red
      padding-top 40px
  .profile-avatar
    background-color #c3c3c3
    height 94px
    margin-top 20px
