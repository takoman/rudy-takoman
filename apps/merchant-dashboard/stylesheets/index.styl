@import "../../../components/main_layout/stylesheets/variables"
.profile-preview
  padding 40px 0
  background-image linear-gradient(to right, $gray-dark 0%, $gray-dark 50%, rgba(255, 255, 255, 0) 51%, rgba(255, 255, 255, 0) 100%)
  background-position bottom
  background-size 4px 2px
  background-repeat repeat-x
  .profile-preview-cover
    background-image url(/assets/img/bg/cover_01.jpg)
    background-size cover
    background-position center
    background-repeat no-repeat
    height 312px
  .profile-preview-avatar
    background-color #c3c3c3
    height 94px
    margin-top 20px
  .profile-preview-info
    height 94px
    margin-top 20px
    padding-left 20px
    .profile-preview-name
      font-size 20px
    .profile-preview-hearts
      padding-top 10px
      svg
        width 20px
        height 20px
        .fillable
          fill $red
  .profile-preview-contact
    background-color #c3c3c3
    height 40px
    margin-top 40px
.form-profile-group
  .form-profile-input-num
    float left
    width 40px
    height 40px
    margin-top 15px
    background-color $red
    border-radius 20px
    color $white
    text-align center
    line-height 40px
  .form-profile-input
    padding-left 60px
  .clear-fix
    clear both
