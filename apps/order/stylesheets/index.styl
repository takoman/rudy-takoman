@import "../../../components/main_layout/stylesheets/variables"
@import 'nib'

.order-line-item
  border-bottom-style dotted
  border-bottom-color $gray-dark
  border-width 2px
  padding-top 20px
  padding-bottom 30px
  .order-line-item-form-header
    h3
      margin-top 0
      font-size 20px
      color $red

  .order-line-item-preview
    display none

.total-field
  height 40px
  line-height 40px
  .total-label
    float left
    height 40px
    line-height 40px
  .total-value
    text-align right
    font-size 18px
.total-all
  margin-top 20px
  padding-top 20px
  border-top-style dotted
  border-top-color $gray-dark
  border-width 2px
  .total-label
    font-size 20px
  .total-value
    text-align right
    font-size 18px
    font-weight bold

.order-partial
  .order-partial-form
    display none
  .order-partial-action
  .order-partial-preview
    display block

.order-partial[data-state="editing"],
  .order-partial-form
    display block
  .order-partial-action
  .order-partial-preview
    display none

.panel-exchange-rate-settings
  .exchange-rate-editing
    display none
  .exchange-rate-results
    display block

.panel-exchange-rate-settings[data-state="editing"]
  .exchange-rate-editing
    display block
  .exchange-rate-results
    display none
  #edit-exchange-rate
    display none

.panel-order-line-items
  .panel-footer
    padding 15px 20px
    background-color $gray-lightest * 1.03
    &.stuck
      position fixed
      bottom 0

.order-line-items-actions
  > .btn
    display block
    margin-bottom 10px
  @media screen and (min-width: 1024px)
    display(flex)
    > .btn
      flex(1 1 auto)
      margin 0 20px 0 0
      &:last-of-type
        margin-right 0

.panel-order-line-items.panel-disabled
  .panel-content
  .panel-footer
    display none

.order-line-item
  .order-line-item-form
    display none
  .order-line-item-preview
    display block

.order-line-item[data-state="editing"]
  .order-line-item-form
    display block
  .order-line-item-preview
    display none

// Center and crop thumbnails with CSS
// http://jonathannicol.com/blog/2014/06/16/centre-crop-thumbnails-with-css/
.item-image
  position relative
  height 150px
  overflow hidden
  img, svg
    position absolute
    width 100%
    left 50%
    top 50%
    height 100%
    width auto
    transform translate(-50%,-50%)
  svg
    height 80%
    width 80%

.image-upload-preview
  img
    max-width 150px

.order-edit-message
  display none
