//
// Buttons
// --------------------------------------------------

// animation
@keyframes spin
  100%
    transform rotate(360deg)

spinner($width = 25px, $height = 6px, $color = "")
  background $color
  width $width
  height $height
  position absolute
  top "calc(50% - %s / 2)" % $height
  left "calc(50% - %s / 2)" % $width
  animation spin 1s infinite linear

// basic
input[type="submit"].btn,
input[type="submit"].btn:visited,
.btn, .btn:visited
  position relative
  display inline-block
  *display inline
  /* IE7 inline-block hack */
  *zoom 1
  padding 3px 20px
  margin-bottom 0
  border 3px solid
  line-height 28px
  //font normal 22px/1 sans-serif
  font-size 14px
  font-smoothing antialiased
  font-weight bold
  letter-spacing 1.5px
  cursor pointer
  vertical-align middle
  text-align center
  text-decoration none
  text-transform uppercase
  transition all 0.15s ease-in-out
  background-color $gray-lightest
  border-color $gray-lightest
  color $black
  &:hover
    background-color $red
    border-color $red
    color $white
    text-decoration none
    > svg
      transform translate(3px, 0)
      .fillable
        fill $white
  &[data-state='loading'],
  &.is-loading
    background-color $red
    border-color $red
    color transparent
    &:after
      content ''
      display block
      spinner(25px, 6px, $white)
  &[data-icon][data-icon-align='left']
    > svg
      margin-left -5px
  &[data-icon][data-icon-align='right']
    > svg
      margin-right -5px
  > svg
    display inline-block
    position relative
    vertical-align top
    height 28px
    width 28px
    margin 0 5px
    transition transform 0.15s ease-in-out
    path, rect
      transition fill 0.15s ease-in-out

.btn:first-child
  *margin-left 0

// disabled
input[type="submit"].btn.btn-disabled,
button.btn.btn-disabled,
a.btn.btn-disabled
  background-color lighten($black, 90%)
  border-color lighten($black, 90%)
  color $white
  cursor default
  &:hover, &:visited
    background-color $white
    background-color lighten($black, 90%)
    border-color lighten($black, 90%)
  &[data-state='loading'],
  &.is-loading
    color $white
    &:after
      display none

//btn-primary
.btn-primary
  color $white
  > svg
    .fillable
      fill $white
  &[data-bg-color='red']
    background-color $white
    border-color $white
    color $red
    > svg
      .fillable
        fill $red
    &:hover
      background-color $gray-lightest
      border-color $gray-lightest
  &.btn-red
    background-color $red
    border-color $red
    &:hover
      background-color $red-darker
      border-color $red-darker
  &.btn-navy
    background-color $navy-dark
    border-color $navy-dark
    &:hover
      background-color $navy-darker
      border-color $navy-darker

//secondary-primary
.btn-secondary
  background-color transparent
  color $black
  border-color $black
  > svg
    .fillable
      fill $black
  &[data-bg-color='red']
    border-color $white
    color $white
    > svg
      .fillable
        fill $white
    &:hover
      color $gray-lightest
      border-color $gray-lightest
      background-color transparent
      > svg
        .fillable
          fill $gray-lightest
  &:hover
    color $black
    border-color $black
    background-color transparent
    > svg
      .fillable
        fill $black
  &.btn-red
    background-color transparent
    border-color $red
    color $red
    > svg
      .fillable
        fill $red
    &:hover
      border-color $red-darker
      color $red-darker
      > svg
        .fillable
          fill $red-darker
  &.btn-navy
    background-color transparent
    border-color $navy-dark
    color $navy-dark
    > svg
      .fillable
        fill $navy-dark
    &:hover
      border-color $navy-darker
      color $navy-darker
      > svg
        .fillable
          fill $navy-darker

// btn-cta
.btn-cta
  background-color $white
  border-color $red
  color $red
  box-shadow 4px 4px 0 0 $red
  > svg
    .fillable
      fill $red
  &:hover
    border-color $red-darker
    color $red-darker
    transform translate(0, 4px)
    box-shadow 0 0 0 0 $brand-primary
    > svg
      .fillable
        fill $red-darker
  &[data-bg-color='red']
    background-color $red
    border-color $white
    color $white
    box-shadow 4px 4px 0 0 $white
    > svg
      .fillable
        fill $white
    &:hover
      border-color $gray-lightest
      color $gray-lightest
      box-shadow 0 0 0 0 $gray-lightest
      > svg
        .fillable
          fill $gray-lightest

// sizes
input[type="submit"].btn.btn-lg,
input[type="submit"].btn.btn-lg:visited,
button.btn.btn-lg, button.btn.btn-lg:visited,
a.btn.btn-lg, a.btn.btn-lg:visited
  padding 14px 30px
  line-height 28px
  font-size 20px
  letter-spacing 2px
  border-width 4px
  &[data-state='loading'],
  &.is-loading
    transform none
    &:after
      spinner(16px, 4px)
  &[data-icon][data-icon-align='left']
    > svg
      margin-right 8px
  &[data-icon][data-icon-align='right']
    > svg
      margin-left 8px
  > svg
    height 28px
    width 28px
    margin 0

input[type="submit"].btn.btn-sm,
input[type="submit"].btn.btn-sm:visited,
button.btn.btn-sm, button.btn.btn-sm:visited,
a.btn.btn-sm, a.btn.btn-sm:visited
  padding 6px 20px
  line-height 14px
  font-size 12px
  border-width 2px
  &[data-state='loading'],
  &.is-loading
    transform none
    &:after
      spinner(16px, 4px)
  &[data-icon][data-icon-align='left']
    > svg
      margin-right 5px
      margin-left -5px
  &[data-icon][data-icon-align='right']
    > svg
      margin-right -5px
      margin-left 5px
  > svg
    height 14px
    width 14px
    margin 0

// full width
input[type="submit"].btn.btn-full-width,
input[type="submit"].btn.btn-full-width:visited,
button.btn.btn-full-width,
a.btn.btn-full-width
  width 100%
  display block
