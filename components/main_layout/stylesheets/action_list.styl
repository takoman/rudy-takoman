//
// Underlined action list styles
//

.action-list
  @extend .list-inline

.action-list
  margin-bottom 0
  color $gray-darker
  li
    &
      padding 0
      font-size 13px
    &:not(:last-child):after
      content '|'
      display inline-block
      font-size 0.8em
      color inherit
      margin 0 0.8em
    a
      color inherit
      faux-underline()
      display inline-block
      vertical-align middle
    a:hover
      color $black
