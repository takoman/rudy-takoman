//- Override any locals with `append locals`
block locals
  - assetPackage = 'all'

doctype html
html
  head
    block head
    link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + 'main_layout' + sd.CSS_EXT) )
    link( type='text/css', rel='stylesheet', href=(sd.ASSET_PATH + assetPackage + sd.CSS_EXT) )
  body
    include ../../modal/template
    //- May move the navbar to a partial
    .navbar.navbar-default
      .container
        .navbar-header
          a.navbar-brand( href='#' ) Takoman
        ul.nav.navbar-nav.navbar-right
          li: a( href='#' ) Home
          li: a( href='#' ) Promotion
          li.active: a( href='#' ) Buy Now
          if user
            li: a( href='/logout' ) Log out
          else
            li: a( href='/login' ) Log in
    block body
    #scripts
      if sd.NODE_ENV != 'test'
        //- Google analytics script (and potentially others, e.g. Mixpanel)
        include ./google_analytics.html

      //- Wire up sharify
      if sharify
        != sharify.script()

      //- Add Google's jQuery
      script( src="//ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js" )
      script( src=(sd.ASSET_PATH + 'main_layout' + sd.JS_EXT) )
      script( src=(sd.ASSET_PATH + assetPackage + sd.JS_EXT) )
      block scripts
