// Variables and functions can be grouped into a separate component
gray-lightest-color = #EEE
gray-lighter-color = #CCC
gray-color = #666
gray-darker-color = #333

caret()
  display inline-block
  content ''
  width 0
  height 0
  vertical-align middle

  border-top 8px solid
  border-right 4px solid transparent
  border-left 4px solid transparent
  margin 2px 0 4px 4px

.bordered-dropdown
  display inline-block
  width 200px
  position relative
  border 2px solid gray-lighter-color
  &:hover > .bordered-dropdown-options
    display block
    border-color gray-color
  &.is-disabled
    .bordered-dropdown-toggle
      cursor default
      color gray-darker-color

.bordered-dropdown-toggle
.bordered-dropdown-options > a
  display block
  padding 8px 10px 6px

.bordered-dropdown-toggle
  > .bordered-dropdown-toggle-caret
    float right
    padding-left 5px
    border-left 1px solid gray-lighter-color
    > .caret
      caret()
      color gray-color

.bordered-dropdown-options
  display none
  position absolute
  background #fff
  border 2px solid gray-lighter-color
  // Offset border width
  top -2px
  left -2px
  right -2px
  z-index 2
  > a
    text-decoration none
    overflow ellipsis
    &:hover
      background-color gray-lightest-color
    &.is-active
      color red

.bordered-dropdown-label
  margin-right 10px
