@import '../main_layout/stylesheets/variables'
@import '../hero_header'

.hero-header
  .checkout-steps
    .step
      position relative
      text-align center
    .step-image
      margin-bottom 20px
      svg
        width 50%
        height 50%
    .step-arrow
      position absolute
      top 25%
      right - ($grid-gutter-width / 2)
      svg
        width 20px
        height 20px
