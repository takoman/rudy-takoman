@import '../main_layout/stylesheets/variables'

.profile-cover
  width 100%
  height 550px
  background-image url(/assets/img/bg/cover_01.jpg)
  background-size cover
  background-position center
  background-repeat no-repeat
  position relative
  .profile-navbar-transparent
    background-color transparent
    background transparent
    border none
    a
      color $white
    .navbar-nav > li > a
      color $white
      letter-spacing 0.12em
    .brand
      float left
      height 120px
      width 240px
      padding 20px
      svg
        width 100%
        height 100%
      svg path
        fill $white
    .navbar-left
      margin-left 45px
      font-size 16px
    .navbar-right
      padding-right 10px
      color $white
      a
        padding-left 14px
        padding-right 14px
        letter-spacing 0.2em
  .slogan
    left 50%
    top 50%
    text-align center
    position absolute
    transform translate(-50%, -50%)
    color $white
    font-size 24px
    letter-spacing 4px
    line-height 38px
  .sub-menu
    height 60px
    width 100%
    background-color rgba(255, 255, 255, 0.4);
    position absolute
    top 490px
    padding 0 135px
    margin 0
    > li
      float left
      display block
      padding-right 25px
      > a
        height 60px
        line-height 60px
        letter-spacing 2px
        color $gray-darkest
        font-size 16px
        font-weight bold
      &.active
        > a
          color $red-darker

.profile-info
  background-color: #f6f6f6
  .avatar
    float right
    width 128px
    height 128px
    background-color: $gray-lighter
    margin-top 30px
    img
      width 128px
      height 128px
  .basic-info
    padding-top 55px
    font-weight bold
    h1
      font-size 27px
      margin-bottom 8px
    .area
      margin 0 0 5px
    .rating
      svg
        width 30px
        height 30px
        .fillable
          fill $red
  .statistics
    margin-top 48px
    min-height 100px
    background-image linear-gradient(to bottom, $gray 60%, rgba(255, 255, 255, 0) 20%)
    background-position left
    background-size 1px 6px
    background-repeat repeat-y
    h5
      margin 12px 0 15px
    .number
      font-size 30px
      font-weight 500
      letter-spacing 2px
  .contact
    height 192px
    background-color $red
    padding-top 60px

.sticky-navbar
  transition all 0.5s ease-in-out
  transform translate(0,-64px)
  position fixed
  top -64px
  right 0
  left 0
  z-index 1030
  padding 0
  background-color #f6f6f6
  height 64px
  min-height 64px
  border none
  letter-spacing 0.12em
  &.show
    display block
    transform translate(0,64px)
  a
    color $gray-darker
  .brand
    display block
    float left
    height 64px
    width 120px
    padding 10px
    svg
      width 100%
      height 100%
    svg path
      fill $red
  .basic-info-block
    float left
    width auto
    .avatar
      float left
      width 32px
      height 32px
      margin 16px 5px
      img
        width 32px
        height 32px
    .info
      float left
      padding 0
      h2.title
        float left
        padding 0 15px 0 10px
        font-size 16px
        height 20px
        line-height 20px
        margin-top 22px
        background-image linear-gradient(to bottom, $gray 60%, rgba(255, 255, 255, 0) 20%)
        background-position right
        background-size 1px 6px
        background-repeat repeat-y
  .nav-left
    display block
    float left
    padding-left 20px
    height 20px
    line-height 20px
    margin-top 22px
    > li
      float left
      display block
      padding-right 25px
      > a
        letter-spacing 2px
        color $gray-darkest
        font-size 14px
        font-weight bold
      &.active
        > a
          color $red-darker
  .nav-right
    display block
    float right
    padding-right 10px
    line-height 64px
    a
      padding-left 14px
      padding-right 14px
      letter-spacing 0.2em
  .contact
    float right
    width 70px
    height 64px
    padding 12px 10px
    background-color $red
    > svg
      display block
      width 50px
      height 40px
      path
        fill $white